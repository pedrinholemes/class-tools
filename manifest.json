{
  "name": "Class Tools",
  "version": "0.1",
  "description": "Tools for your classroom",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent"
  ],
  "page_action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "scripts": [
      "src/main.js"
    ],
    "persistent": true
  }
}
